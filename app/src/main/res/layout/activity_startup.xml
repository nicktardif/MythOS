<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#800080"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicktardif.seniorproject.universalhackathon.StartupActivity">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/mythos_slogan"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startup_words"/>

        <ImageView
            android:src="@drawable/mythos_logo_big"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/startup_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startup_logo"/>

    </RelativeLayout>
</RelativeLayout>
